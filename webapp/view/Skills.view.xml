<mvc:View
   controllerName="com.esfsrap.empskifsrap.controller.Skills"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
>

<semantic:SemanticPage 
        id="idSkillPage" 
        title=" Skills Page" 
        floatingFooter="true" 
        showNavButton="true" 
        showFooter = "{skillView>/editMode}"
        navButtonPress=".onNavBack" 
        icon="sap-icon://add-favorite">

<semantic:content>
    <Table 
        id="idSkillTable"
        autoPopinMode="true"
        contextualWidth="Auto"
        growing="true"
        items="{
            path: '/Skills',
            parameters: {
                $$updateGroupId : 'SkillGroup'
            } 
        }"
        mode="SingleSelectLeft">			
                
        <headerToolbar>
            <Toolbar>
                <Title text="Skills Table"/>
                <ToolbarSpacer/>      
                <Button 
                    width="150px" 
                    icon="sap-icon://add"
                    tooltip="{i18n>addButtonText}"  
                    press=".onAddSkill" 
                    text="Add Skill"/> 
                    <Button 
                    id="deleteSkillButton" 
                    icon="sap-icon://delete" 
                    tooltip="{i18n>deleteButtonText}" 
                    press="onDeleteSkill" 
                    text="Delete Skill"/>
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column width="12rem">
                <Text text="Skill"/>
            </Column>
            <Column width="12rem">
                <Text text="Type"/>
            </Column>
            <Column width="12rem">
                <Text text="Institution"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem 
                vAlign="Middle"
                press=".onPressSkill"
                type="Inactive"> 
                <cells>
                    <ObjectIdentifier title="{Skill}" />
                        <Text text="{Type}"/>
                        <Text text="{Institution}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
            </semantic:content>

         <semantic:titleMainAction>
			<semantic:TitleMainAction id="addSkillButton" text="Add" press=".onAddSkill" visible ="{= ${skillView>/editMode} ? false : true }"/>
		</semantic:titleMainAction>

        <semantic:footerMainAction>
			<semantic:FooterMainAction id="saveButton" text="Save" press=".onSaveSkill" />
		</semantic:footerMainAction>

		<semantic:footerCustomActions>
			<Button id="resetButton" text="Cancel"  press=".onResetChanges" />
		</semantic:footerCustomActions>

        <!-- <semantic:dependents>
			<core:Fragment fragmentName="com.esfsrap.empskifsrap.view.AddSkillDialog" type="XML" />
		</semantic:dependents> -->
</semantic:SemanticPage>

</mvc:View>
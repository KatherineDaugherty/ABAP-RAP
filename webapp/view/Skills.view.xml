<mvc:View
   controllerName="com.esfsrap.empskifsrap.controller.Skills"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc">

    <Table 
        id="idSkillTable"
        autoPopinMode="true"
        contextualWidth="Auto"
        growing="true"
        items="{/Skills}"
        mode="SingleSelectLeft">			
                
        <headerToolbar>
            <Toolbar>
                <Title text="Skills Table"/>
                <ToolbarSpacer/>      
                <Button 
                    width="150px" 
                    icon="sap-icon://add"
                    tooltip="{i18n>addButtonText}"  
                    press=".onAddSkill" 
                    text="Add Skill"/> 
                    <Button 
                    id="deleteSkillButton" 
                    icon="sap-icon://delete" 
                    tooltip="{i18n>deleteButtonText}" 
                    press=".onDeleteSkill" 
                    text="Delete Skill"/>
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column width="12rem">
                <Text text="Skill"/>
            </Column>
            <Column width="12rem">
                <Text text="Type"/>
            </Column>
            <Column width="12rem">
                <Text text="Institution"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem 
                vAlign="Middle"
                press=".onPressSkill"
                type="Inactive"> 
                <cells>
                    <ObjectIdentifier title="{Skill}" />
                        <Text text="{Type}"/>
                        <Text text="{Institution}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>